<section id="main-content">
      <section class="wrapper" style="margin-top: -80px;">
        <div class="row mt">
         <% @items.in_groups_of(2).each do |group| %>    
          <div class="col-lg-12">
            <% group.compact.each do |item| %>
              <div class="col-lg-6">
                <div class="card">
                    <%= link_to unlok_air_path(item.id) do  %>
                      <%= image_tag(item.pictures.first.image.url) rescue nil%>
                  <% end %>
                </div> 
              </div>
            <% end %>
          </div>        
        <% end %>
        </div>
  </section>
</section>